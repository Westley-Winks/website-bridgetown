<!doctype html>
<html lang="<%= site.locale %>">
  <head>
    <%= render "head", metadata: site.data._data.site_metadata, title: data.title %>
  </head>
  <body>
    <%= render Shared::Navbar.new(metadata: site.metadata, resource: resource) %>

    <main class=<%= resource.data.layout %>>
    <snow-fall count="100" style="--snow-fall-size: var(--size-3); z-index: 10000"></snow-fall>
      <%= yield %>
    </main>

    <%= render "footer", metadata: site.metadata %>
  </body>
</html>
